<p id="notice"><%= notice %></p>
<div clas="row">
  <div class="col-12 p-0 mt-3">
    <!--title-->
    <div class="ibox-title">
      <h1 class="pl-4"><strong>Informaci√≥n del estudiante</strong></h1>
    </div>
    <!--Estudiante -->
    <div class="ibox-content">
      <div class="info col-12">
        <div class="card border-secondar">
          <div class="card-header d-flex justify-content-between">
            <div class="card-subtitle">
              <h4>Tipo de documento: <strong><%= @estudiante.tipo_documento.nombre%></strong></h4>
              <h4>Identificacion: <strong><%= @estudiante.identificacion%></strong></h4>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card-body">
              <h4 class="card-subtile">Nombres:</h4>
              <p class="card-text">
                <%= @estudiante.nombres%>
              </p>
            </div>
            <div class="card-body">
              <h4 class="card-subtile">apellidos:</h4>
              <p class="card-text">
                <%= @estudiante.apellidos%>
              </p>
            </div>
            <% if @estudiante.cursos.exists? %>
            <div class="card-body">
              <h4 class="card-subtile">Cursos Activos:</h4>
              <p class="card-text">
                <table class="table table-striped">
                  <tr>
                    <th class="active">id</th>
                    <th class="active">Codigo</th>
                    <th class="active">Nombre</th>
                    <th class="active">fecha_inicio</th>
                    <th class="active">fecha_fin</th>
                  </tr>
                  <% @estudiante.cursos.each do |curso| %>
                  <tr>
                    <td><%=curso.id%></td>
                    <td><%=curso.codigo%></td>
                    <td><%=curso.nombre%></td>
                    <td><%=curso.fecha_inicio%></td>
                    <td><%=curso.fecha_fin%></td>
                    <% end %>
                  </tr>
                </table>
              </p>
            </div>
            <% else %>
            <div class="card-body">
              <h4 class="card-subtile">Cursos asignados:</h4>
              <script type="text/javascript">
                  alert('no tiene cursos matriculados')
              </script>

              <h2>no tiene cursos matriculados</h2>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      <!--botonera-->
      <!--botonera-->
      <div class="row d-flex">
        <%= link_to "volver", estudiantes_path, class: "btn btn-outline-primary bn-lg col-4" %>
        <%= link_to 'Editar', edit_estudiante_path(@estudiante), class: "btn btn-outline-primary bn-lg col-4"  %>
        <%= link_to 'nuevo estudiante', new_estudiante_path, class: "btn btn-outline-primary bn-lg col-4"  %>
      </div>
    </div>
  </div>
</div>
