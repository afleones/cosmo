<div class="container">
  <div class = "row">
      <div class="col-md-12">
        <%= simple_form_for(@estudiante) do |f| %>
          <% @estudiante.errors.full_messages.each do |message| %>
            <div class="form-group text-center be-red white">
            <%= message %>
            </div>
          <%end%>

          <div class="row">
            <div class="col-md-6">
              <%= f.input :nombres, required: true,
                  autofocus: true, class:"form-control", placeholder: "Digite su Nombre"%>
            </div>
            <div class="col-md-6">
              <%= f.input :apellidos, required: true,autofocus: true, min:1,
              class: 'form-control', placeholder: "Digite sus apellidos"%>
            </div>
          </div>
            <br>

        <div class="row">
              <div class="col-md-4">
                <%= f.association :tipo_documento, label_method: :nombre, value_method: :id, min:"1"%>
            </div>
            <div class="col-md-4">
                  <%= f.input :identificacion, required: true, autofocus: true, min:1, class:"form-control", placeholder: "Digite su numero de Identificacion"%>
            </div>
            <div class="col-md-4">
              <%= f.association :genero, label_method: :nombre, value_method: :id, min:"1"%>
          </div>
        </div>
          <div class="row">
          <div class="col-md-6">
            <%= f.submit "Registrar Estudiante", class:"btn btn-success" %>
          </div>
          </div>


  </div>

        <%end%>
      </div>
