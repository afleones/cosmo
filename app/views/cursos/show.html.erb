<p id="notice"><%= notice %></p>
<div clas="row">
  <div class="col-12 p-0 mt-3">
    <!--title-->
    <div class="ibox-title">
      <h1 class="pl-4"><strong>Informaci√≥n del curso</strong></h1>
    </div>
    <!--Estudiante -->
    <div class="ibox-content">
      <div class="info col-12">
        <div class="card border-secondar">
          <div class="card-header d-flex justify-content-between">
            <div class="card-subtitle">
              <h4>Codigo del curso: <strong><%= @curso.codigo%></strong></h4>
              <h4>Nombre del curso: <strong><%= @curso.nombre%></strong></h4>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card-body">
              <h4 class="card-subtile">Fecha de inicio:</h4>
              <p class="card-text">
                <%= @curso.fecha_inicio%>
              </p>
            </div>
            <div class="card-body">
              <h4 class="card-subtile">Fecha de fin:</h4>
              <p class="card-text">
                <%= @curso.fecha_fin%>
              </p>
            </div>

          </div>
          <% if @curso.docentes.exists? %>
          <div class="card-body">
            <h4 class="card-subtile">Docentes asignados:</h4>
            <p class="card-text">
              <table class="table table-striped">
                <tr>
                  <th class="active">Tipo de documento</th>
                  <th class="active">identificacion</th>
                  <th class="active">nombres</th>
                  <th class="active">apellidos</th>
                </tr>
                <% @curso.docentes.each do |docente| %>
                <tr>
                  <td><%=docente.tipo_documento.nombre%></td>
                  <td><%=docente.identificacion%></td>
                  <td><%=docente.nombres%></td>
                  <td><%=docente.apellidos%></td>
                  <% end %>
                </tr>
              </table>
            </p>
          </div>
          <% else %>
          <div class="card-body">
            <h4 class="card-subtile">Docentes asignados:</h4>
            <script type="text/javascript">
                alert('no hay docentes asignados')
            </script>
            <h2>No hay docentes asignados</h2>
          </div>
          <% end %>
          <% if @curso.docentes.exists? %>
          <div class="card-body">
            <h4 class="card-subtile">Estudiantes asignados:</h4>
            <p class="card-text">
              <table class="table table-striped">
                <tr>
                  <th class="active">Tipo de documento</th>
                  <th class="active">identificacion</th>
                  <th class="active">nombres</th>
                  <th class="active">apellidos</th>
                </tr>
                <% @curso.estudiantes.each do |estudiante| %>
                <tr>
                  <td><%=estudiante.tipo_documento.nombre%></td>
                  <td><%=estudiante.identificacion%></td>
                  <td><%=estudiante.nombres%></td>
                  <td><%=estudiante.apellidos%></td>
                  <% end %>
                </tr>
              </table>
            </p>
          </div>
          <% else %>
          <div class="card-body">
            <h4 class="card-subtile">Estudiantes matriculados:</h4>
            <script type="text/javascript">
                alert('no hay estudiantes asignados')
            </script>
            <h2>No hay docentes asignados</h2>
          </div>
          <% end %>
        </div>
      </div>
      <!--botonera-->
      <div class="row d-flex">
        <%= link_to "volver", cursos_path, class: "btn btn-outline-primary bn-lg col-4" %>
        <%= link_to 'Editar', edit_curso_path(@curso), class: "btn btn-outline-primary bn-lg col-4"  %>
        <%= link_to 'nuevo curso', new_curso_path, class: "btn btn-outline-primary bn-lg col-4"  %>
      </div>
    </div>
  </div>
</div>
