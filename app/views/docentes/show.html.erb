<div clas="row">
  <div class="col-12 p-0 mt-3">
    <!--title-->
    <div class="ibox-title">
      <h1 class="pl-4"><strong>Informaci√≥n del docente</strong></h1>
    </div>
    <!--Estudiante -->
    <div class="ibox-content">
      <div class="info col-12">
        <div class="card border-secondar">
          <div class="card-header d-flex justify-content-between">
            <div class="card-subtitle">
              <h4>Tipo de documento: <strong><%= @docente.tipo_documento.nombre%></strong></h4>
              <h4>Identificacion: <strong><%= @docente.identificacion%></strong></h4>
