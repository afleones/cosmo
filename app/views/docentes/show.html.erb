<p id="notice"><%= notice %></p>
<div clas="row">
  <div class="col-12 p-0 mt-3">
    <!--title-->
    <div class="ibox-title">
      <h1 class="pl-4"><strong>Informaci√≥n del docente</strong></h1>
    </div>
    <!--Estudiante -->
    <div class="ibox-content">
      <div class="info col-12">
        <div class="card border-secondar">
          <div class="card-header d-flex justify-content-between">
            <div class="card-subtitle">
              <h4>Tipo de documento: <strong><%= @docente.tipo_documento.nombre%></strong></h4>
              <h4>Identificacion: <strong><%= @docente.identificacion%></strong></h4>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card-body">
              <h4 class="card-subtile">Nombres:</h4>
              <p class="card-text">
                <%= @docente.nombres%>
              </p>
            </div>
            <div class="card-body">
              <h4 class="card-subtile">apellidos:</h4>
              <p class="card-text">
                <%= @docente.apellidos%>
              </p>
            </div>
            <% if @docente.cursos.exists? %>
            <div class="card-body">
              <h4 class="card-subtile">Cursos asignados:</h4>
              <p class="card-text">
                <table class="table table-striped">
                  <tr>
                    <th class="active">Id</th>
                    <th class="active">Codigo</th>
                    <th class="active">Nombre</th>
                    <th class="active">Fecha de inicio</th>
                    <th class="active">Fecha de fin</th>
                  </tr>
                  <% @docente.cursos.each do |curso| %>
                  <tr>
                    <td><%=curso.id%></td>
                    <td><%=curso.nombre%></td>
                    <td><%=curso.codigo%></td>
                    <td><%=curso.fecha_inicio%></td>
                    <td><%=curso.fecha_fin%></td>
                    <% end %>
                  </tr>
                </table>
              </p>
            </div>
            <% else %>
            <div class="card-body">
              <h4 class="card-subtile">Docentes asignados:</h4>
              <script type="text/javascript">
                  alert('no hay docentes asignados')
              </script>

              <h2>No hay docentes asignados</h2>
            </div>
            <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <!--botonera-->
      <div class="row d-flex">
        <%= link_to "volver", docentes_path, class: "btn btn-outline-primary bn-lg col-4" %>
        <%= link_to 'Editar', edit_docente_path(@docente), class: "btn btn-outline-primary bn-lg col-4"  %>
        <%= link_to 'nuevo docente', new_docente_path, class: "btn btn-outline-primary bn-lg col-4"  %>
      </div>
    </div>
  </div>
</div>
